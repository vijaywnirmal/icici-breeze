# Backend configuration
APP_NAME="Automated Trading Platform"
ENVIRONMENT=development

# Breeze API credentials (do not commit real values)
BREEZE_API_KEY=
BREEZE_API_SECRET=
BREEZE_SESSION_TOKEN=

# Database (optional)
# Example: postgresql+psycopg://user:pass@localhost:5432/dbname
POSTGRES_DSN=

# Control instruments first run on login
INSTRUMENTS_FIRST_RUN_ON_LOGIN=true

# Frontend configuration (Vite)
# Base HTTP URL for API (e.g., http://127.0.0.1:8000)
VITE_API_BASE_URL=
# Optional: Explicit WS base (otherwise derived from VITE_API_BASE_URL)
VITE_API_BASE_WS=
